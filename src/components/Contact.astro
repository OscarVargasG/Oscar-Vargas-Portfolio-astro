<section id="contact" class="bg-gray-100 py-10">
    <div class="container mx-auto">
      <h2 class="text-3xl font-bold mb-6 text-center">Contact</h2>
      <form class="flex flex-col items-center w-full md:w-2/3">
        <label for="name" class="w-full text-left mb-2">Name:</label>
        <input type="text" id="name" name="name" class="p-2 mb-4 w-full border rounded" required />
        
        <label for="email" class="w-full text-left mb-2">Email:</label>
        <input type="email" id="email" name="email" class="p-2 mb-4 w-full border rounded" required />
        
        <label for="message" class="w-full text-left mb-2">Message:</label>
        <textarea id="message" name="message" class="p-2 mb-4 w-full border rounded" required></textarea>
        
        <button type="submit" class="bg-blue-500 text-white p-2 rounded">Send</button>
      </form>
    </div>
  </section>
  